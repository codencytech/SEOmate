<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Glow (Larger, more transparent circle) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#403B82F6" /> <!-- Very transparent blue -->
            <size
                android:width="12dp"
                android:height="12dp" />
        </shape>
    </item>

    <!-- Inner Core (Smaller, solid circle) -->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/active_dot_color" />
            <size
                android:width="4dp"
                android:height="4dp" />
        </shape>
    </item>
</layer-list>
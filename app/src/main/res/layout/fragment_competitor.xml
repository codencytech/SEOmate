<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/gradient_header">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_competitor"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Competitor Analysis"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Compare your site with others"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins" />
    </LinearLayout>

    <!-- Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_card"
        android:elevation="4dp">

        <!-- Mode selector -->
        <RadioGroup
            android:id="@+id/rgMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbManual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual Compare"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbDiscover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Discover Online" />
        </RadioGroup>

        <!-- Your URL -->
        <EditText
            android:id="@+id/inputMyUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Your website URL (e.g., example.com)"
            android:inputType="textUri"
            android:singleLine="true"
            android:minHeight="48dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="#545454"
            android:backgroundTint="#A78BFA"
            android:fontFamily="@font/poppins" />

        <!-- Competitor URLs (Manual mode only) -->
        <EditText
            android:id="@+id/inputCompetitors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Competitor URLs (comma-separated)"
            android:inputType="textUri"
            android:singleLine="false"
            android:minHeight="48dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="#545454"
            android:backgroundTint="#A78BFA"
            android:fontFamily="@font/poppins" />

        <!-- Buttons -->
        <Button
            android:id="@+id/btnCompare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compare Websites"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Results (scrollable) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/resultsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" />
    </HorizontalScrollView>

</LinearLayout>

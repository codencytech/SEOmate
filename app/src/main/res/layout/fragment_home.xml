<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome back!"
            android:textSize="24sp"
            android:textColor="?attr/colorOnBackground"
            android:textStyle="bold"
            android:fontFamily="@font/poppins" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's optimize your SEO today."
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins" />

        <!-- Big Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEO Score"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monitor your site's health"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnBackground"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins" />

                <Button
                    android:id="@+id/checkNowButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Check Now"
                    android:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tools"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:textColor="?attr/colorOnBackground"
            android:fontFamily="@font/poppins" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <!-- 1. Audit Site -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_audit"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Audit Site"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:textColor="?attr/colorOnBackground"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check SEO health"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnBackground"
                            android:fontFamily="@font/poppins" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 2. Track Keywords -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_keywords"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track Keywords"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:textColor="?attr/colorOnBackground"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Live rank check"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnBackground"
                            android:fontFamily="@font/poppins" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 3. Fix SEO Errors -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_fix"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fix Errors"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:textColor="?attr/colorOnBackground"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Improve performance"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnBackground"
                            android:fontFamily="@font/poppins" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 4. Generate Report -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_report"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Generate Report"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:textColor="?attr/colorOnBackground"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share analysis"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnBackground"
                            android:fontFamily="@font/poppins" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 5. Competitor Analysis -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_competitor"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Competitor"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:textColor="?attr/colorOnBackground"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compare with others"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnBackground"
                            android:fontFamily="@font/poppins" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Analytics Overview Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analytics Overview"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keyword growth, traffic, etc."
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="@font/poppins" />

                <!-- Placeholder Graph Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_chart_placeholder"
                    android:scaleType="centerInside"
                    app:tint="?attr/colorPrimary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Recent Activity Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Activity"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:textColor="?attr/colorOnBackground"
            android:fontFamily="@font/poppins" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Checked site audit for example.com"
                android:textSize="14sp"
                android:textColor="?attr/colorOnBackground"
                android:fontFamily="@font/poppins"
                android:padding="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Fixed 3 critical SEO issues"
                android:textSize="14sp"
                android:textColor="?attr/colorOnBackground"
                android:fontFamily="@font/poppins"
                android:padding="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Added 7 new keywords"
                android:textSize="14sp"
                android:textColor="?attr/colorOnBackground"
                android:fontFamily="@font/poppins"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Bottom spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="64dp" />


        <!-- More cards or sections later -->

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

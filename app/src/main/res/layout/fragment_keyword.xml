<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Page Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/gradient_header">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_keyword"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Track Keywords"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Check live rankings for your keywords"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- URL Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_card"
            android:elevation="4dp">

            <!--Website URL Input-->
            <EditText
                android:id="@+id/inputUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A78BFA"
                android:fontFamily="@font/poppins"
                android:hint="Enter website URL"
                android:textColor="@color/black"
                android:textColorHint="#545454"
                android:inputType="textUri"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:singleLine="true"
                android:drawablePadding="8dp" />

            <!--Keyword Input-->
            <EditText
                android:id="@+id/inputKeywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A78BFA"
                android:fontFamily="@font/poppins"
                android:hint="Enter keywords (comma separated)"
                android:inputType="textCapWords"
                android:textColor="@color/black"
                android:textColorHint="#545454"
                android:paddingBottom="8dp"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:singleLine="true"
                android:drawablePadding="8dp" />


            <Button
                android:id="@+id/btnTrackKeywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#4CAF50"
                android:fontFamily="@font/poppins"
                android:text="Track Keywords"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Progress -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Results Container -->
        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="20dp">

            <!-- Section Title -->
            <TextView
                android:id="@+id/tvResultsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keyword Rankings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textColor="?attr/colorOnBackground"
                android:gravity="center" />

            <!-- List of keyword results -->
            <LinearLayout
                android:id="@+id/keywordsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
